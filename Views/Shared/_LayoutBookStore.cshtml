    <script>
        $(document).ready(function() {
            // Handle the show.bs.modal event when the modal is about to be shown
            $('#productmodal').on('show.bs.modal', function (event) {
                var click = $(event.relatedTarget); // Button that triggered the modal
                var bookId = click.data('id');
                var bookName = click.data('name'); // Extract product info from data-product attribute
                var price = click.data('price');
                var image = click.data('image');
                var category = click.data('category');

                // Update modal content based on productInfo
                $('#bookId').val(bookId);
                $('#bookName').text(bookName);
                $('#bookPrice').text('$'+price);
                $('#oldPrice').text('$'+price*2);
                $('#bookImage').attr('src', 'uploads/BookImages/'+image);
                $('#bookCategory').text(category);
            });
        });
    </script>
