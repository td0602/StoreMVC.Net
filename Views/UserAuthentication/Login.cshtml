@{
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}
@model Store_App.Models.DTO.LoginModel
<head>
    <title>Login</title>
    <style>
        .mg-l {
            margin-left: 300px; /* Đặt giá trị lề trái mong muốn, ví dụ: 20px */
        }
    </style>
</head>
    
    <!-- Start breadcrumb area -->
    <div class="ht__breadcrumb__area bg-image--1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__inner text-center">
                        <h2 class="breadcrumb-title text-black">Login</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End breadcrumb area -->
    <!-- Start My Account Area -->
    <section class="my_account_area pt--80 pb--55 bg--white">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="my__account__wrapper mg-l">
                        <h3 class="account__title">Form Login</h3>
                        <form method="post"  asp-action="Login">
                            @* @using(Html.BeginForm("Login", "Access", FormMethod.Post))
                            { *@
                            <div class="account__form">
                                <div class="input__box">
                                    <label asp-asp-for="Username">User Name <span>*</span></label>
                                    <input asp-for="Username" type="text">
                                    <div class="msg">
                                        <span class="err text-danger" asp-validation-for="Username"></span>
                                    </div>
                                </div>
                                <div class="input__box">
                                    <label asp-for="Password">Password<span>*</span></label>
                                    <input asp-for="Password" type="password">
                                    <div class="msg">
                                        <span class="err text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    @if(TempData["msg"] != null) {
                                        <div class="msg">
                                            <span class="err text-danger">@TempData["msg"]</span>
                                        </div>
                                    }
                                </div>

                                <div class="form__btn">
                                    <button type="submit" value="Login">Submit</button>
                                </div>
                                <br>
                                <a href="/register">Not a user! Click here to sign up</a>
                            </div>
                            @* } *@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>