
@{
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}
@model Store_App.Models.DTO.RegistrationModel
<head>
    <title>Login</title>
    <style>
        .mg-l {
            margin-left: 300px; /* Đặt giá trị lề trái mong muốn, ví dụ: 20px */
        }
    </style>
</head>

<div class="ht__breadcrumb__area bg-image--1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__inner text-center">
                        <h2 class="breadcrumb-title text-black">Create An Account</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End breadcrumb area -->
    <!-- Start My Account Area -->
    <section class="my_account_area pt--80 pb--55 bg--white">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="my__account__wrapper mg-l">
                        <h3 class="account__title">Form Register</h3>
                        <form method="post" action="" object="${user}" onsubmit="return checkPassword()">
                            <input type="hidden" class="form-control" value="true" id="enabled" name="enabled">
                            <div class="account__form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="input__box">
                                    <label asp-for="Username">User Name <span>*</span></label>
                                    <input asp-for="Username" type="text">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="FullName">Full Name <span>*</span></label>
                                    <input asp-for="FullName" type="text">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="Email">Email <span>*</span></label>
                                    <input asp-for="Email" type="email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="PhoneNumber">Phone Number <span>*</span></label>
                                    <input asp-for="PhoneNumber" type="number">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="Address">Address <span>*</span></label>
                                    <input asp-for="Address" type="text">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="Password">Password<span>*</span></label>
                                    <input asp-for="Password" type="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="input__box">
                                    <label asp-for="PasswordConfirm">Retype password<span>*</span></label>
                                    <input asp-for="PasswordConfirm" type="password">
                                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                </div>
                                <div class="form__btn">
                                    <button>Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>