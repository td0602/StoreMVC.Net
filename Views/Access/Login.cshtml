@{
    Layout = "~/Views/Shared/_LayoutBookStore.cshtml";
}
@model Store_App.Models.User
<head>
    <title>Login</title>
    <style>
        .mg-l {
            margin-left: 300px; /* Đặt giá trị lề trái mong muốn, ví dụ: 20px */
        }
    </style>
</head>

@if(TempData["SuccessMessage"] != null){
    <div id="myAlert" class="alert alert-success" role="alert">
    @TempData["SuccessMessage"]
    </div>
}
@if(@TempData["ErrorMessage"] != null) {
    <div id="myAlert" class="alert alert-danger" role="alert">
    @TempData["ErrorMessage"]
    </div>
}
    
    <!-- Start breadcrumb area -->
    <div class="ht__breadcrumb__area bg-image--1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__inner text-center">
                        <h2 class="breadcrumb-title text-black">Login</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End breadcrumb area -->
    <!-- Start My Account Area -->
    <section class="my_account_area pt--80 pb--55 bg--white">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="my__account__wrapper mg-l">
                        <h3 class="account__title">Form Login</h3>
                        @* <form method="post"  action=""> *@
                            @using(Html.BeginForm("Login", "Access", FormMethod.Post))
                            {
                            <div class="account__form">
                                <div class="input__box">
                                    <label>User Name <span>*</span></label>
                                    @* <input type="text" required name="username"> *@
                                    @Html.TextBoxFor(item => item.UserName, new {@class = ""
                                        , required="required", autofocus="autofocus"})
                                </div>
                                <div class="input__box">
                                    <label>Password<span>*</span></label>
                                    @* <input type="password" name="password" required> *@
                                    @Html.TextBoxFor(item => item.Password, new {@class="", type = "password", required="required"})
                                </div>
                                @* <div class="form__btn">
                                    <button type="submit">Submit</button>
                                </div> *@
                                <div class="form__btn">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit" >SIGN IN</button>
                                    @* <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN IN</a> *@
                                </div>
                            </div>
                            }
                        @* </form> *@
                    </div>
                </div>
            </div>
        </div>
    </section>