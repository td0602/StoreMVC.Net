
@model Store_App.Models.Order
        <!-- Main content -->
        <section class="content">

            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">About Order</h3>
                            </div>

                            <div class="box-body">
                                <strong><i class="fa fa-user"></i> Costomer's Name</strong>
                                <p class="text-muted">@Model.FullName</p>
                                <hr>
                                <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>
                                <p class="text-muted">@Model.Address</p>
                                <hr>
                                <strong><i class="fa fa-envelope margin-r-5"></i> Email</strong>
                                <p class="text-muted">@Model.Email</p>
                                <hr>
                                <strong><i class="fa fa-phone margin-r-5"></i> Phone Number</strong>
                                <p class="text-muted">@Model.PhoneNumber</p>
                                <hr>
                                <strong><i class="fa fa-credit-card margin-r-5"></i> Payment</strong>
                                <p class="text-muted">@Model.Payment</p>
                                <hr>
                                <strong><i class="fa fa-barcode margin-r-5"></i> Order Code</strong>
                                <p class="text-muted">@Model.OrderCode</p>
                                <hr>
                                <strong><i class="fa  fa-calendar-check-o margin-r-5"></i> Ordering Time</strong>
                                <p class="text-muted">@Model.DateCreated</p>
                                <hr>
                                <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
                                <p class="text-muted">@Model.Note</p>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-body box-profile">
                                <h3 class="profile-username text-center">Order</h3>
                                <ul class="list-group list-group-unbordered">
                                    <li class="list-group-item">
                                        <b>Books</b> <b class="pull-right">Total</b>
                                    </li>
                                    @foreach(var item in Model.carts) {
                                        <li class="list-group-item" each="cart:${carts}">
                                            <a>@item.BookName x @item.Quantity</a> <a class="pull-right">$@item.Total</a>
                                        </li>
                                    }
                                    <li class="list-group-item">
                                        <b>Cart Subtotal</b> <b class="pull-right">$@(Model.OrderTotal - 50)</b>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Shipping</b> <b class="pull-right">$50</b>
                                    </li>
                                    <li class="list-group-item">
                                        <b>ORDER TOTAL</b> <b class="pull-right">$@Model.OrderTotal</b>
                                    </li>
                                </ul>
                                <a href="/admin/delete-order?OrderId=@Model.OrderId" class="btn btn-danger btn-block"><b>Delete</b></a>
                            </div>

                        </div>
                    </div>

                </div>

            </section>

        </section>
        <!-- /.content -->