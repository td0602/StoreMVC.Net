    @model Book
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Thêm mới sản phẩm
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

<!--      <div class="col-md-6">-->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"> Form</h3>
            </div>
            <form class="form-horizontal" method="post" asp-action="Create"  enctype="multipart/form-data">
              <div class="box-body">
                @* <input class="form-control" type="hidden" value="${customUserDetails.user.id}" id="user.id" name="user.id" /> *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                  <label asp-for="BookName" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="BookName" type="text" class="form-control">
                    <span asp-validation-for="BookName" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group">
                  <label asp-for="Price" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Price" type="text" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                  </div>
                </div>

                <div class="form-group">
                  <label asp-for="Author" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input asp-for="Author" type="text" class="form-control">
                    <span asp-validation-for="Author" class="text-danger"></span>
                  </div>
                </div>

                <div class="form-group">
                  <label asp-for="CategoryId" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label asp-for="Image" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input type="file" class="form-control" id="exampleInputFile" accept="image/*" name="fileImage">
                  </div>
                </div>

                <div class="form-group">
                  <label asp-for="Description" class="col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <!-- Lam the nao de luu tru: dinh dang, image, ... -->
                    <textarea id="content" asp-for="Description" rows="10" cols="80"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                  </div>
                </div

              </div>

              <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
              </div>

            </form>
          </div>
    </section>
