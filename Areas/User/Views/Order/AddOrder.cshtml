@model Store_App.Models.ViewModels.OrderViewModel

    <div class="ht__breadcrumb__area bg-image--8">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__inner text-center">
                        <h2 class="breadcrumb-title text-black">Checkout</h2>
                        <nav class="breadcrumb-content">
                            <a class="breadcrumb_item text-black" href="#">Home</a>
                            <span class="brd-separator text-black">/</span>
                            <span class="breadcrumb_item active">Checkout</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End breadcrumb area -->
    <!-- Start Checkout Area -->
    <section class="wn__checkout__area section-padding--lg bg__white">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <div class="customer_details">
                        <h3>Billing details</h3>
                        <form id="orderForm" method="post" asp-action="AddOrder">
                            <div class="customar__field">
                                @* <input type="hidden" id="orderTotal" name="orderTotal" value=""> *@
                                <div class="input_box">
                                    <label asp-for="OrderView.FullName">Full Name<span>*</span></label>
                                    <input asp-for="OrderView.FullName" type="text" value="@Model.User.Name" readonly style="background-color: #f0f0f0;">
                                    <span asp-validation-for="OrderView.FullName"></span>
                                </div>
                                <div class="input_box">
                                    <label asp-for="OrderView.Address">Address <span>*</span></label>
                                    <input asp-for="OrderView.Address" type="text" value="@Model.User.Address" required readonly style="background-color: #f0f0f0;">
                                    <span asp-validation-for="OrderView.Address"></span>
                                </div>
                                <div class="input_box">
                                    <label asp-for="OrderView.PayMent">Payment<span>*</span></label>
                                    <select class="select__option" id="payment" asp-for="OrderView.PayMent">
                                        @* <option if="${order.payment != null}" text="${order.payment}"></option> *@
                                        <option>Thanh toán khi nhận hàng (COD - Cash on Delivery)</option>
                                        <option>Ví điện tử</option>
                                        <option>Tài khoản ngân hàng</option>
                                        <option>Thẻ tín dụng/debit</option>
                                    </select>
                                    <span asp-validation-for="OrderView.PayMent"></span>
                                </div>
                                <div class="input_box">
                                    <label asp-for="OrderView.Note">Note </label>
                                    <input asp-for="OrderView.Note" type="text">
                                    <span asp-validation-for="OrderView.Note"></span>
                                </div>
                                <div class="margin_between">
                                    <div class="input_box space_between">
                                        <label asp-for="OrderView.PhoneNumber">Phone <span>*</span></label>
                                        <input asp-for="OrderView.PhoneNumber" type="text" value="@Model.User.PhoneNumber" required readonly style="background-color: #f0f0f0;">
                                    </div>

                                    <div class="input_box space_between">
                                        <label asp-for="OrderView.Email">Email <span>*</span></label>
                                        <input asp-for="OrderView.Email" type="email"value="@Model.User.Email"  required readonly style="background-color: #f0f0f0;">
                                    </div>
                                </div>
                                <div class="cartbox__btn">
                                    <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
                                        <li></li>
                                        <li><a id="submitOrderForm">Order</a></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 col-12 md-mt-40 sm-mt-40">
                    <div class="wn__order__box">
                        <h3 class="order__title">Your order</h3>
                        <ul class="order__total">
                            <li>Product</li>
                            <li>Total</li>
                        </ul>
                        <ul class="order_product">
                            @foreach(var item in Model.Carts) {
                                <li>
                                <p>@item.BookName × @item.Quantity</p>
                                <span>$@item.Total</span>
                            </li>
                            }
                        </ul>
                        <ul class="shipping__method">
                            <li>Cart Subtotal <span>$@Model.Carts.Sum(c => c.Total)</span></li>
                            <li>Shipping <span>$0.00</span></li>
                        </ul>
                        <ul class="total__amount">
                            <li>Order Total <span>$@(Model.Carts.Sum(c => c.Total)+50)</span></li>
                        </ul>
                    </div>
                    <div id="accordion" class="checkout_accordion mt--30" role="tablist">
                        <div class="payment">
                            <div class="che__header" role="tab" id="headingOne">
                                <a class="checkout__title" data-bs-toggle="collapse" href="#collapseOne"
                                   aria-expanded="true" aria-controls="collapseOne">
                                    <span>Direct Bank Transfer</span>
                                </a>
                            </div>
                            <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne"
                                 data-bs-parent="#accordion">
                                <div class="payment-body">Make your payment directly into our bank account. Please
                                    use your Order ID as the payment reference. Your order won’t be shipped until
                                    the funds have cleared in our account.
                                </div>
                            </div>
                        </div>
                        <div class="payment">
                            <div class="che__header" role="tab" id="headingTwo">
                                <a class="collapsed checkout__title" data-bs-toggle="collapse" href="#collapseTwo"
                                   aria-expanded="false" aria-controls="collapseTwo">
                                    <span>Cheque Payment</span>
                                </a>
                            </div>
                            <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo"
                                 data-bs-parent="#accordion">
                                <div class="payment-body">Please send your cheque to Store Name, Store Street, Store
                                    Town, Store State / County, Store Postcode.
                                </div>
                            </div>
                        </div>
                        <div class="payment">
                            <div class="che__header" role="tab" id="headingThree">
                                <a class="collapsed checkout__title" data-bs-toggle="collapse" href="#collapseThree"
                                   aria-expanded="false" aria-controls="collapseThree">
                                    <span>Cash on Delivery</span>
                                </a>
                            </div>
                            <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree"
                                 data-bs-parent="#accordion">
                                <div class="payment-body">Pay with cash upon delivery.</div>
                            </div>
                        </div>
                        <div class="payment">
                            <div class="che__header" role="tab" id="headingFour">
                                <a class="collapsed checkout__title" data-bs-toggle="collapse" href="#collapseFour"
                                   aria-expanded="false" aria-controls="collapseFour">
                                    <span>PayPal <img src="/assets/images/icons/payment.png" alt="payment images"> </span>
                                </a>
                            </div>
                            <div id="collapseFour" class="collapse" role="tabpanel" aria-labelledby="headingFour"
                                 data-bs-parent="#accordion">
                                <div class="payment-body">Pay with cash upon delivery.</div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script>
    document.getElementById("submitOrderForm").addEventListener("click", function() {
        // Lấy ra biểu mẫu theo ID
        var form = document.getElementById("orderForm");

        // Submit biểu mẫu
        form.submit();
    });
</script>